<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link rel="stylesheet" href="/styles.css" />
    <title>Document</title>
  </head>

  <header><%- include('./partials/header'); %></header>

  <body>
    <div class="header">
      <h2><%= data[0].blogTitle %></h2>
    </div>

    <div class="row">
      <div>
        <form action="">
          <input class="card search" type="text" placeholder="Search.." />
          <button type="submit"><i class="fa fa-search"></i></button>
        </form>


        <!-- for each row of blog there will generate a new card -->

        <% data.forEach((row) => { %>
        <div class="card">
          <h2><%= row.blogDescription %></h2>
          <p><%= row.blogText %></p>
        </div>
        <% }); %> <% if (data) { %>
        <Button class="button" style="background-color: green"
          ><a
            style="text-decoration: none; color: white"
            href="/addpost/<%= data[0].blogID %>"
            >Add Post</a
          ></Button
        >
        <% } %>
      </div>
    </div>

    <div class="footer">
      <h2>Footer</h2>
    </div>
  </body>
</html>
